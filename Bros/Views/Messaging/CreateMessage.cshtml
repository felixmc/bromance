@model Bros.DataModel.Message


@{
    Bros.DataModel.User mMe = ViewBag.Me;
    List<Bros.DataModel.User> mUsers = ViewBag.Users;
}
@section MainNavigation
{
    <li>@Html.ActionLink("Store", "StoreIndex", "Store")</li> 
    <li>@Html.ActionLink("Logout", "Logout", "Authentication")</li>
         
}


@section ProfileLinks{
    <li>@Html.ActionLink("Preferences", "EditProfile", "Profile")</li>
    <li>@Html.ActionLink("Feed", "Feed", "Profile")</li>
    <li>@Html.ActionLink("View My Profile", "ProfileIndex", "Profile")</li>
    
    <!-- This is where Messages, Photos, Albums, Friends list will go-->

}
<h1>@ViewBag.Title</h1>
@section SecondaryNavigation{
<li>@Html.ActionLink("Messages", "MessageHome", "Messaging")</li>
    
}

<!--Body -->
       @Html.ValidationSummary()
    @using (Html.BeginForm("PostCreateMessage","Messaging", FormMethod.Post))
    {

        @Html.Hidden("Sender", mMe);
        <p>To: @Html.DropDownList("Receiver", new SelectList(mUsers))</p>
        <p>@Html.TextBoxFor(x=>x.Content ))</p>
        <input type="submit" value="Send Message" />
        
    }

@section Footer
{
    <div class="footerNav">
        <ul>
            <li>&copy; Bromance, 2013</li>
            <li>@Html.ActionLink("About", "AboutUs", "Home")</li>
            <li>@Html.ActionLink("Legal", "TermsOfUse", "Home")</li>       
        </ul>
    </div>   
}





