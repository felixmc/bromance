@model Bros.DataModel.Message

@{
    ViewBag.Title = "_SendMessagePartialView";
}

@using(Html.BeginForm("MessageHome","Message",FormMethod.Post,Model))
{
             @:To @Html.Label("To",Model.Receiver)
             @Html.Hidden("To", Model.Receiver)
            <br />
            @:From @Html.Label("From", Model.Sender)
            @Html.Hidden("From", Model.Sender)
            <br />       
            @:Content @Html.TextBox("Content", Model.Content)
            @Html.Hidden("DateSent", Model.DateSent)
            <br />
        
            
            <input type="submit" value="Save Changes"  />
}