<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
@*        <link href="~/Content/default.css" rel="stylesheet" type="text/css"/>*@
    </head>
    <body>
        <div class="container">
            <header>
                @RenderSection("LoginRegister", required: false)
                <nav class="mainNav">
                    <ul>
@*                        Change to true when pages are created*@
                        @RenderSection("MainNavigation", required: false)
                     
                    </ul>
                </nav>   
                
                <nav class="secondaryNav">
                    <ul>
                      @RenderSection("SecondaryNavigation", required:false)
                    </ul>
                </nav>

                <nav class="profileLinks">
                    <ul>
                        @RenderSection("ProfileLinks", required:false)   
                    </ul>
                </nav>       
            </header>
            
            <aside class="leftSidebar">

                @RenderSection("LeftSideBar", required: false)
            </aside>

            <div class="content">
                <h2>@ViewBag.Title</h2>               
                <div class="content-main">
                    @RenderBody()
                </div>
            </div>
            
            <aside class="rightSidebar">
                @RenderSection("RightSideBar", required: false)
            </aside>
            
            <footer>
@*                Change to true when pages are created*@
                @section Footer
                {
                    <div class="footerNav">
                        <ul>
                            <li>&copy; Bromance, 2013</li>
                            <li>@Html.ActionLink("About", "AboutUs", "Home")</li>
                            <li>@Html.ActionLink("Legal", "TermsOfUse", "Home")</li>       
                        </ul>
                    </div>   
                }
            </footer>
                
        </div>       
    </body>
</html>
