@model Bros.DataModel.BroRequest

<div class="BroRequestPartial">
    @if (ViewBag.CurrentUserId == Model.Sender.Id)
    {
        <p class="RequestMessage">Request sent to @Model.Receiver.Profile.FirstName @Model.Receiver.Profile.LastName</p>
    }
	else
	{
        <p class="RequestMessage">@Model.Sender.Profile.FirstName @Model.Sender.Profile.LastName has sent you a Bro Request!</p>
        @Html.ActionLink("Accept", "BroAccept", "Interaction", new { id = Model.Id }, new { @class = "button" })
    }
    @Html.ActionLink("Dismiss", "DismissRequest", "Interaction", new { id = Model.Id }, new { @class = "button red" })
</div>