@model List<Bros.DataModel.Photo>
@{
    Layout = "~/Views/Layouts/_ProfileLayout.cshtml";
}


<article>
    <section>

        @if(Model.Count != 0){
foreach(Bros.DataModel.Photo photo in Model){

    <header>

        "@photo.Album.Title"
        <br />
    <a href="@Url.Action("SinglePhotoComment", "Profile", new { id = photo.Id })">@Html.Partial("~/Views/Shared/_SinglePhoto.cshtml", photo)</a>
<br /><span>@photo.Caption<br />@photo.Comments.Count comments</span><br />@photo.DateCreated.ToShortDateString()<br />    
        <h4>Add photo</h4> @Html.ActionLink("+", "AddPhoto", "Profile", new { albumId = photo.Album.Id }, false) @Html.ActionLink("Remove Photo", "RemovePhoto", "Profile", new { id = photo.Id, albumId = photo.AlbumId }, false)
        <p></p>
</header>
}

        }
        else{
            <h2>No photos in album</h2>
            @Html.ActionLink("+", "AddPhoto", "Profile", new { albumId = ViewBag.AlbumId }, false)
        }
    </section>
<section>

</section>
</article>
<p></p>