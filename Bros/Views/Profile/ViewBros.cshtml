@model IEnumerable<Bros.DataModel.User>

@{
    ViewBag.Title = "ViewBros";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
    
}

<div class="ViewBros">
    @if (Model.Count() != 0)
    {
        List<Bros.DataModel.Profile> profiles = ViewBag.Profiles;
        
        foreach(Bros.DataModel.User user in Model){
            if(user.Profile != null){
                Html.RenderPartial("_UserPartialView", user);   
            }else{
                <p>There seems to be an issue with this bro's profile.</p>   
            }
        }
    }
    else
    {
        <div class="NoUsers">No users were found.</div>
    }
</div>
